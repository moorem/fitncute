<% if flash[:alert] %>
  <div class="flash errors"><%= flash[:alert] %></div>
<% end %>

<% @body_id = 'login' %>

<div id="existing-customer" class="login-form-full">
  <figure id="logo" class="col-md-3 admin-logo" data-hook>
    <%= logo %>
  </figure>
  <div class="transparent-div no-padding animated fadeInUp animation-delay-8">
    <div class="tab-content">
      <h2><%= Spree.t(:admin_login) %></h2>

      <div data-hook="login">
        <%= form_for Spree::User.new, :as => :spree_user, :url => spree.admin_create_new_session_path do |f| %>
          <div class="form-group">
            <div class="input-group login-input">
              <span class="input-group-addon"><i class="fa fa-user"></i></span>
              <%= f.email_field :email, :class => 'form-control', :placeholder => 'Email', :tabindex => 1 %>
            </div>
            <br>

            <div class="input-group login-input">
              <span class="input-group-addon"><i class="fa fa-lock"></i></span>
              <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password', :tabindex => 2 %>
            </div>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me, :tabindex => 3 %>
                <%= f.label :remember_me, Spree.t(:remember_me) %>
              </label>
            </div>
            <%= f.submit Spree.t(:login), :class => 'btn btn-ar btn-primary pull-right', :tabindex => 4 %>
            <div class="clearfix"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div data-hook="login_extras"></div>

<style>
  header #logo{
    display: none;
  }
    body.admin{
      background: url(<%= asset_path 'admin/back.png' %>);
      overflow:hidden;
    }
  @media only screen and (min-width: 768px) and (max-width: 959px) {
    .container ,.container .sixteen.columns {
      width: 768px; }
  }
  @media only screen and (max-width: 767px) {
    .container, .container .sixteen.columns  {
      width: 300px; }
  }
  @media only screen and (min-width: 480px) and (max-width: 767px) {
    .container, .container .sixteen.columns  {
      width: 420px; }
  }
</style>