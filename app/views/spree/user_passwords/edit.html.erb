<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= Spree.t(:change_my_password) %></h3>
    </div>
    <div class="panel-body">
      <%= form_for @spree_user, :as => :spree_user, :url => spree.update_password_path, :method => :put do |f| %>
        <div class="form-group login-group">
          <span class="input-group-addon">
            <i class="fa fa-lock"></i>
          </span>
          <%= f.password_field :password, :class => "form-control", :placeholder => Spree.t(:password) %><br />
        </div>
        <div class="form-group login-group">
          <span class="input-group-addon">
            <i class="fa fa-lock"></i>
          </span>
          <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => Spree.t(:confirm_password) %>
        </div>
        <%= f.hidden_field :reset_password_token %>
        <%= f.submit Spree.t(:update), :class => 'btn btn-ar btn-success' %>
      <% end %>
    </div>
  </div>
</div>