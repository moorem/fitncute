<% if Spree::Slide.published.count > 0 %>
  <section id="slideshow">
    <div class="container">
      <ul class="slider regular">
        <% Spree::Slide.published.order('position ASC').each do |s| %>
          <li class="slider-list">
            <%= link_to image_tag(s.slide_image.url, :title => s.slide_name.to_url , :class=>'pull-left slide-img'), url_for(s.slide_link) %>
            <div class="col-md-5 slider-text pull-right">
              <div class="">
                <h1><%= s.slide_name %></h1>

                <h2><%= s.body.html_safe %></h2>
                <p class="animated fadeInUpBig animation-delay-17">
                  <span class="price-box">$2,599.00</span>
                  <%= link_to s.slide_link , :class=>"btn btn-ar btn-transparent btn-lg" do %>
                    <i class="fa fa-shopping-cart"></i>
                    Purchase
                  <%end%>
                </p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <a title="<%= t(:previous) %>" class="slider-prev" style="display: none"><%#= t(:previous) %></a>
    <a title="<%= t(:next) %>" class="slider-next" style="display: none"><%#= t(:next) %></a>

  </section>
<% end %>
<script>
  $(document).ready(function() {
    $(".slider.regular").simplecarousel({
      width: 1170,
      height: 350,
      visible: 1,
      auto: 8000,
      next: $('.slider-next'),
      prev: $('.slider-prev'),
      pagination: false,
      layout: "regular",
      fade: true
    });
  });

  $('#slideshow').hover(function(){
    $('.slider-prev, .slider-next').toggle();
  })
</script>
