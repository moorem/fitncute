<% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>
<nav id="taxonomies" class="sidebar-item" data-hook>
  <h4 class='taxonomy-root'>Categories<span class="glyphicon glyphicon-chevron-down arrow-down"></span></h4>
  <% @taxonomies.each do |taxonomy| %>
    <% cache [I18n.locale, taxonomy, max_level] do %>
      <h6 class='list-group-item'><%= link_to(taxonomy.name, '#') %></h6>
      <%= taxons_tree(taxonomy.root, @taxon, max_level) %>
    <% end %>
  <% end %>
</nav>

<script>
  $('.list-group-item').hover(function () {
    $('.hover-subcategory').css('display', 'block');
  });
  $("body").click(function () {
    $('.hover-subcategory').css('display', 'none');
  });
  $('.list-group-item').append('<span class="pull-right"><i class="fa fa-angle-double-right"></i><span>');
</script>