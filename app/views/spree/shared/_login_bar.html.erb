<% if spree_current_user %>
  <li class="header_btn"><%= link_to Spree.t(:my_account), spree.account_path %></li>
  <li class="header_btn"><%= link_to content_tag(:span, '', :class => 'glyphicon glyphicon-user') + " " +Spree.t(:logout), spree.logout_path %></li>
<% else %>
  <li class="header_btn"><%= link_to Spree.t(:register), spree.registration_path %></li>
  <li id="link-to-login" class="dropdown">
    <%= link_to content_tag(:span, '', :class => 'glyphicon glyphicon-user') + " " +Spree.t(:login), '#', :id=>"navLogin", :class=>"dropdown-toggle", "data-toggle"=>"dropdown" %>
    <div class="dropdown-menu" role="menu" style="padding:2px;">
      <%= render :partial => 'spree/shared/login' %>
    </div>
  </li>
<% end %>
<script>
  $('#link-to-login').hover(
      function(){ $('#link-to-login').addClass('open') },
      function(){ $('#link-to-login').removeClass('open') }
  )
</script>