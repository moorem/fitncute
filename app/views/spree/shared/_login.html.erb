<%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path do |f| %>
  <fieldset id="password-credentials">
    <div class="form-group login-group">
      <span class="input-group-addon">
        <i class="fa fa-user"></i>
      </span>
      <%= f.email_field :email, :class => 'form-control', :tabindex => 1, :placeholder => Spree.t(:email) %>
    </div>
    <div class="form-group login-group">
      <span class="input-group-addon">
        <i class="fa fa-lock"></i>
      </span>
      <%= f.password_field :password, :class => 'form-control', :tabindex => 2, :placeholder => Spree.t(:password) %>
    </div>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, Spree.t(:remember_me) %>
      </label>
    </div>
      <%= f.submit Spree.t(:login), :class => 'btn btn-ar btn-primary pull-right', :tabindex => 3 %>
    <a class="social-icon-ar sm twitter animated fadeInDown animation-delay-2" href="#">
      <i class="fa fa-twitter"></i>
    </a>
    <a class="social-icon-ar sm google-plus animated fadeInDown animation-delay-3" href="#">
      <i class="fa fa-google-plus"></i>
    </a>
    <a class="social-icon-ar sm facebook animated fadeInDown animation-delay-4" href="#">
      <i class="fa fa-facebook"></i>
    </a>
  </fieldset>
<% end %>